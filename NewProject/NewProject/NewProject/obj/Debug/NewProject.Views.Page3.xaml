<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="NewProject.Views.Page3"
             Title="Fertilizer Page" >

	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
					iOS="0, 10, 0, 0" />
	</ContentPage.Padding>

	<ScrollView>
		<StackLayout>
			<Label
				VerticalOptions="Center"
				Text="Nutrients in the soil:" />
			<Frame OutlineColor="Accent">
				<StackLayout Orientation="Horizontal">
					<Label VerticalOptions="Center">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="NPK Level" />
								<Span Text="{x:Static sys:Environment.NewLine}" />
								<Span Text="  Nitrogen	: 90%" />
								<Span Text="{x:Static sys:Environment.NewLine}" />
								<Span Text="  Phosporous: 6%" />
								<Span Text="{x:Static sys:Environment.NewLine}" />
								<Span Text="  Potassium	: 4%" />
							</FormattedString>
						</Label.FormattedText>
					</Label>
				</StackLayout>
			</Frame>
			<Label
				VerticalOptions="Center"
				Text="Fertilizers required for the crop:" />
			<Frame OutlineColor="Accent">
				<StackLayout Orientation="Horizontal">
					<Label VerticalOptions="Center">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="Urea : 20mg" />
								<Span Text="{x:Static sys:Environment.NewLine}" />
								<Span Text="Ammonium Nitrate : 40mg" />
								<Span Text="{x:Static sys:Environment.NewLine}" />
								<Span Text="Ammonium Sulphate	: 40mg" />
							</FormattedString>
						</Label.FormattedText>
					</Label>
				</StackLayout>
			</Frame>
			<Label
				VerticalOptions="Center"
				Text="Suggestions from the suppiler" />
			<Frame OutlineColor="Accent">
				<StackLayout Orientation="Horizontal">
					<Label VerticalOptions="Center">
						
					</Label>
				</StackLayout>
			</Frame>
			<Button
				Text="Add to schedule"
				BorderWidth="1"
				VerticalOptions="Center">
			</Button>
		</StackLayout>
	</ScrollView>

</ContentPage>